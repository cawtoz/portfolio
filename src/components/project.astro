<style>

.skills {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

.card {
  --main-color: #dedede;
  --sub-color: #bd1b1b;
  --bg-color: #161618;
  --accent-color: #bd1b1b;
  position: relative;
  width: 250px;
  height: 320px;
  padding: 20px;
  border-radius: 15px;
  display: flex;
  gap: 5px;
  flex-direction: column;
  background-color: var(--bg-color);
  transition: all 0.2s;
  box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.5);
}

.img {
  width: 100%;
  height: 150px;
  border-radius: 10px;
  object-fit: cover;
  box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.2);
}

.name {
  text-align: left;
  margin-top: 10px;
}

a {
  text-decoration: none;
}

.card::before {
  content: '';
  width: 99%;
  height: 99%;
  background: var(--sub-color);
  position: absolute;
  z-index: -1;
  top: 1px;
  left: 1px;
  border-radius: 25px;
  transition: all 0.3s;
}

.buttons-container {

  display: flex;
  margin-top: auto;
  margin-left: auto;

  svg {
    transition: all 0.3s;
  }
  path {
    fill: var(--main-color);
  }
  svg:hover path {
    fill: var(--accent-color);
  }
}

.code svg {
  width: 24px;
  height: 28px;
}

.demo svg {
  width: 30px;
  height: 28px;
}

.card:hover {
  box-shadow: 0px 0px 20px -5px #000;
}

.card:hover::before {
  transform: rotate(10deg);
  box-shadow: 0px 0px 20px -5px #000;
}

@media(max-width: 450px) {
    .card {
        width: 210px;
    }  
}
</style>
