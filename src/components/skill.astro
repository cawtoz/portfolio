---
interface Props {
    href: string;
    src: string;
    alt: string;
} 

const { href, src, alt } = Astro.props as Props;
---
<div>
    <img src={src} alt={alt} loading="lazy">
    <span>{alt}</span>
</div>


<style>

    span {
        width: 100%;
    }

    div {
        position: relative;
        width: 50px;
        display: flex;
        flex-direction: column;
        cursor: pointer;
        padding: 35px;
        border-radius: 10px;
        background-color: #161618;
        box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.5);
    }

    div::before {
        content: '';
        inset: 0;
        opacity: 0;
        z-index: -10;
        position: absolute;
        border-radius: 10px;
        background: linear-gradient(-45deg, #fd3737 0%, #4c0303 100%);
        transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    div:hover::before, div:active::before{
        opacity: 1;
        transform: rotate(80deg)
    }

    span {
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        opacity: 0;
        transition: opacity 0.3s ease, bottom 0.3s ease;
        font-family: 'Pixelify Sans', monospace;
    }

    div:hover span, div:active span {
        opacity: 1;
        bottom: -30px;
    }

    img {
        transition: transform 0.3s ease;
        border-radius: 10px;
    }

    div:hover img {
        transform: scale(1.2);
    }

</style>
